<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="24dp"
    android:background="#FFFFFF">

    <LinearLayout
        android:id="@+id/volunteerFormContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Heading -->
        <TextView
            android:id="@+id/volunteerHeading"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Join Our Volunteer Team"
            android:textSize="24sp"
            android:textStyle="bold"
            android:gravity="center"
            android:textColor="#000000"
            android:layout_marginBottom="16dp" />

        <!-- Full Name -->
        <EditText
            android:id="@+id/volunteerName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Your Full Name"
            android:inputType="textPersonName"
            android:padding="12dp"
            android:background="@drawable/edit_text_bg"
            android:layout_marginBottom="8dp" />

        <!-- Email -->
        <EditText
            android:id="@+id/volunteerEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Your Email"
            android:inputType="textEmailAddress"
            android:padding="12dp"
            android:background="@drawable/edit_text_bg"
            android:layout_marginBottom="8dp" />

        <!-- Phone -->
        <EditText
            android:id="@+id/volunteerPhone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Your Phone (10 digits)"
            android:inputType="phone"
            android:padding="12dp"
            android:maxLength="10"
            android:background="@drawable/edit_text_bg"
            android:layout_marginBottom="8dp" />

        <!-- Preferred Role Spinner -->
        <Spinner
            android:id="@+id/volunteerRoleSpinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="48dp"
            android:paddingVertical="12dp"
            android:layout_marginBottom="16dp"
            android:background="@drawable/edit_text_bg" />


        <!-- Submit Button -->
        <Button
            android:id="@+id/submitVolunteer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Sign Up"
            android:textColor="#FFFFFF"
            android:backgroundTint="#FF6B6B"
            android:padding="12dp"
            android:textStyle="bold" />

        <!-- Divider -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#CCCCCC"
            android:layout_marginVertical="24dp" />

        <!-- FAQ Section -->
        <TextView
            android:id="@+id/faqHeading"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Frequently Asked Questions"
            android:textSize="22sp"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_marginBottom="16dp" />

        <!-- FAQ Items -->
        <TextView
            android:text="What is the time commitment for volunteering?"
            android:textStyle="bold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:text="We offer flexible schedules tailored to your availability."
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp" />

        <TextView
            android:text="Do I need prior experience?"
            android:textStyle="bold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:text="No experience is needed. We provide training for your role."
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp" />

        <TextView
            android:text="Can I volunteer with a group?"
            android:textStyle="bold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:text="Yes! Contact us to coordinate group volunteering."
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp" />

        <TextView
            android:text="How do I get started?"
            android:textStyle="bold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:text="Just fill out the form above and weâ€™ll get in touch."
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="32dp" />

    </LinearLayout>
</ScrollView>